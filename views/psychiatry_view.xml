                            id="whoqolbref_button"
                            icon="fa-pencil-square-o"
                            name="%(action_psychiatry_whoqolbref_evaluation)d"
                            attrs="{'invisible': [('patient', '=', False)]}"
                            context="{'search_default_patient_id': active_id,'default_patient_id': active_id}">
